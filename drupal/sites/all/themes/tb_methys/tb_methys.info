 ; Theme info
name = 'Tb Methys'
description = TB Methys is a light weight Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a> and shows a slick styling of some basic Drupal content types such as blog, poll, forum and a contact form. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'nucleus'
screenshot = 'screenshot.png'

; Stylesheets
stylesheets[all][] = 'css/html-elements.css'
stylesheets[all][] = 'css/forms.css'
stylesheets[all][] = 'css/page.css'
stylesheets[all][] = 'css/articles.css'
stylesheets[all][] = 'css/comments.css'
stylesheets[all][] = 'css/forum.css'
stylesheets[all][] = 'css/fields.css'
stylesheets[all][] = 'css/blocks.css'
stylesheets[all][] = 'css/panel-panes.css'
stylesheets[all][] = 'css/navigation.css'
stylesheets[all][] = 'css/fonts.css'
stylesheets[all][] = 'css/blocks-style.css'

;Javascripts
scripts[] = 'js/jquery.matchHeights.min.js'

; Seperate CSS3 to css3.css
stylesheets[all][] = 'css/css3.css'

; Stylesheets for Print Media
stylesheets[print][] = 'css/print.css'

; Conditional Stylesheets for IE
stylesheets-conditional[IE][all][] = css/ie.css
stylesheets-conditional[IE 9][all][] = css/ie7.css
stylesheets-conditional[IE 7][all][] = css/ie7.css

; Scripts in this theme
scripts[] = 'js/tb_methys.js'

; Core regions
regions[content] = 'Main content'
